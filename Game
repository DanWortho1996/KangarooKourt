# main functions:
# scores of player

def lose_karma():
    global karma
    karma -= 5
def gain_karma():
    global karma
    karma += 5
# printing text one by one letter
def print_slow(txt):
        for letter in txt:
                sys.stdout.write(letter)
                sys.stdout.flush()
                time.sleep(0.01)
#  printing list with index 
def list_serial(list):
    for index in range(len(list)):
        print(str(index + 1) + ". " + list[index])
    print("\n")
    return ""
#  current date
today = date.today()
current_date = today.strftime("%B %d, %Y")
#  current time
now = datetime.now()
current_time = now.strftime("%H:%M:%S")


