#verdict
def counting():
    global num
    space= "                                        "
    space2="        "
    while num > 1:
            num-=1
            time.sleep(1) 
            if num >= 9:
                    print(f"\033[1;34;40m")
            if num <= 8:        
                    print(f"\033[1;32;40m")
            if num <= 6:
                    print(f"\033[1;35;40m")
            if num <= 3:
                    print(f"\033[1;31;40m")
            print(f"{space} -----------------")
            print(f"{space}|{space2}{space2} |")

            print(f"{space}|{space2}{num}{space2}|")
            print(f"{space}| {space2}{space2}|")
            print(f"{space} _________________ ")
    print("verdict")
    time.sleep(1)
counting()

